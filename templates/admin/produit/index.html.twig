                        <td>
                            <img src="{{asset('images/' ~ produit.image)}}" alt="" width="60" height="70">
                        </td>
                    </tr>
                    {% endfor %} -->
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
