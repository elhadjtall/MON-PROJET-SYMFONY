{% extends 'base.html.twig' %}

{% block body %}
<h1>Gestion de stocks</h1>
<!-- La desactivation de la validation du  -->
<!-- {attr: { novalidate: 'novalidate'},})}}  -->

<!-- Ceci est un formulaire en symfony surtout n'oublie pas de definir les entity de la base ceci dans le controler -->
{{ form_start(form, {
    attr: { novalidate: 'novalidate'},})}} 
<p>
    {{ form_label(form.name, 'Nom: ')}}
    {{form_widget(form.name)}}
    {{ form_errors(form.name)}}
</p>
<p>
    {{ form_label(form.price, 'Prix : ')}}
    {{ form_widget(form.price)}}
    {{ form_errors(form.price)}}
</p>
<p>
    {{ form_label(form.description, 'Description : ')}}
    {{ form_widget(form.description)}}
    {{ form_errors(form.description)}}
</p>
<p>
    {{form_label(form.quantity, 'Quantity: ')}}
    {{form_widget(form.quantity)}}
    {{ form_errors(form.quantity)}}
</p>
<p>
    {{form_label(form.image, 'Image: ')}}
    {{form_widget(form.image)}}
    {{form_errors(form.image)}}
</p>
<p>
    <button type="submit" class="btn btn-primary">Envoyer</button>
</p>
{{form_end(form)}}

{% endblock %}