{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col">
            <p>
                <a href="{{ url('homepage.hello', { name: ' '})}}">Oumar</a>
            </p>
            <p>{{ my_array | join(' / ') }}</p>
            <ul>
                {% for value in my_array %}
                    <li>{{ value }}</li>
                {% endfor %}
            </ul>
            <ol>
                {% for key, value in assoc_array %}
                    <li>{{ key ~ ' : ' ~ value}}</li>
                {% endfor %}
            </ol>

            <p>{{ now | date('d/m/Y h:i:s')}}</p>
            <p>
                <img src="{{ asset('images/image.jpeg')}}" width="200" alt="">
            </p>
        </div>
    </div>
    
{% endblock %}

{% block title %}
    Cours Symfony
{% endblock %}
